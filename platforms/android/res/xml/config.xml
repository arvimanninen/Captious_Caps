<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="OrientationLock">
        <param name="android-package" value="com.plugin.phonegap.OrientationLock" />
    </feature>
    <feature name="LowLatencyAudio">
        <param name="android-package" value="com.rjfun.cordova.plugin.LowLatencyAudio" />
    </feature>
    <feature name="Accelerometer">
        <param name="android-package" value="org.apache.cordova.devicemotion.AccelListener" />
    </feature>
    <feature name="Vibration">
        <param name="android-package" value="org.apache.cordova.vibration.Vibration" />
    </feature>
    <name>Captious Caps</name>
    <description>
        Captious Caps is an addictive game where you need to collect bottle caps before they disappear. 
    </description>
    <author>
		Arvi Manninen and Sami Nisonen
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
